<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Bookings</title>
</head>
<body>
  <p><a href="/">Home</a> | <a href="/users/me">My Profile</a></p>
  <h1>My Booked Sessions & Events</h1>

  <% if (events && events.length > 0) { %>
    <ul>
      <% events.forEach(event => { %>
        <li>
          <a href="/events/<%= event._id %>"><%= event.title %></a>
          — <%= new Date(event.date).toLocaleDateString() %> @ <%= event.time %>
          — <%= event.location %>
          <form action="/events/<%= event._id %>/unbook" method="POST" style="display:inline; margin-left:10px;">
            <button type="submit">Cancel Booking</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>You haven't booked any sessions or events yet.</p>
  <% } %>
</body>
</html>


